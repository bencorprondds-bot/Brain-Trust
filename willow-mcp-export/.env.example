# Willow MCP Configuration
# Copy this to .env and fill in your values

# Supabase (for persistent memory)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# Google Drive (for document access)
GOOGLE_CREDENTIALS_PATH=/path/to/your/service-account.json

# Google Drive Folder IDs (from your "Life with AI" shared drive)
DRIVE_FOLDER_INBOX=your-inbox-folder-id
DRIVE_FOLDER_IN_DEVELOPMENT=your-in-development-folder-id
DRIVE_FOLDER_READY_FOR_REVIEW=your-ready-for-review-folder-id
DRIVE_FOLDER_PUBLISHED=your-published-folder-id
DRIVE_FOLDER_CHARACTERS=your-characters-folder-id
DRIVE_FOLDER_REFERENCE_DOCS=your-reference-docs-folder-id
DRIVE_FOLDER_WORLD=your-world-folder-id

# Anthropic API (for chorus feedback - uses Haiku for cost efficiency)
ANTHROPIC_API_KEY=your-anthropic-api-key
